{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "../shared/src/**/*",
    "../backend/src/**/*",
    "../seeding/src/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node", "jest"],
    "strict": true,
    "baseUrl": "../..",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@main/*": ["packages/electron/src/main/*"],
      "@preload/*": ["packages/electron/src/preload/src/*"],
      "@renderer/*": ["packages/frontend/src/*"],
      "@services/*": ["packages/shared/src/*"],
      "@backend/*": ["packages/backend/src/*"],
      "@seeding/*": ["packages/seeding/src/*"]
    }
  }
}
