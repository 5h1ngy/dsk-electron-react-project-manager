{
    "extends":  "@electron-toolkit/tsconfig/tsconfig.web.json",
    "include":  [
        "packages/renderer/src/env.d.ts",
        "packages/renderer/src/**/*",
        "packages/renderer/src/**/*.tsx",
        "packages/preload/src/**/*.d.ts"
    ],
    "compilerOptions":  {
        "composite":  true,
        "jsx":  "react-jsx",
        "baseUrl":  ".",
        "paths":  {
            "@renderer/*":  [
                "packages/renderer/src/*"
            ],
        "@preload/*":  [
            "packages/preload/src/*"
        ],
        "@main/*":  [
            "packages/main/src/*"
        ],
        "@services/*":  [
            "packages/services/src/*"
        ],
        "@api/*":  [
            "packages/api/src/*"
        ]
    },
        "strict":  true,
        "types":  [
            "jest"
        ],
        "resolveJsonModule": true,
        "experimentalDecorators":  true,
        "emitDecoratorMetadata":  true
    }
}
