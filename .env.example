# Logging level for application output
LOG_LEVEL=info

# Controls whether Electron DevTools can be opened (true/false)
ENABLE_DEVTOOLS=false

# Application semantic version (keep in sync with package.json)
APP_VERSION=0.0.0

# Runtime target for renderer logic (desktop | webapp)
APP_RUNTIME=desktop
VITE_APP_RUNTIME=desktop

# HTTP bridge defaults (used by the SPA build)
API_PROXY_TARGET=http://localhost:3333
VITE_API_BASE_URL=/api
# Docker compose overrides
HOST_API_PORT=3333
API_PORT=3333

