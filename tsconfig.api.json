{
  "extends": "./tsconfig.node.json",
  "include": ["packages/services/src/**/*", "packages/api/src/**/*", "seeding/**/*"],
  "compilerOptions": {
    "outDir": "./out/api",
    "rootDir": ".",
    "composite": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@main/*": ["packages/main/src/*"],
      "@preload/*": ["packages/preload/src/*"],
      "@services/*": ["packages/services/src/*"],
      "@api/*": ["packages/api/src/*"],
      "@seeding/*": ["seeding/*"]
    }
  }
}
