{
  "name": "electron-project-manager",
  "version": "1.0.0",
  "main": "dist/electron/main/index.js",
  "description": "Project Management Software with Electron, React, and Node",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:renderer && npm run build:electron && npm run dist",
    "build:renderer": "vite build",
    "build:electron": "node build-electron.js",
    "preview": "vite preview",
    "start": "electron .",
    "dist": "electron-builder --dir -c electron-builder.js"
  },
  "keywords": [
    "electron",
    "react",
    "project-management",
    "sqlite",
    "typescript"
  ],
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.2.5",
    "vite-plugin-electron": "^0.29.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@reduxjs/toolkit": "^2.6.1",
    "@uiw/react-md-editor": "^4.0.5",
    "antd": "^5.24.6",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.4.8",
    "date-fns": "^3.6.0",
    "dayjs": "^1.11.13",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.55.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.5.0",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "styled-components": "^6.1.17",
    "zod": "^3.24.2"
  },
  "build": {
    "appId": "com.electron.project-manager",
    "productName": "Project Manager",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "extraMetadata": {
      "main": "dist/electron/main/index.js"
    }
  }
}
